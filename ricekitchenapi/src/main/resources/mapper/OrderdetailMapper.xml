<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cping.ricekitchen.mapper.OrderdetailMapper">

    <select id="getDetailByOid" resultMap="detailMap">
        select  * from orderdetail where oid = #{oid}
    </select>

    <resultMap id="detailMap" type="com.cping.ricekitchen.entity.Orderdetail">
        <id column="id" property="id"></id>
        <result property="count" column="count"/>
        <collection property="menu" column="mid" ofType="com.cping.ricekitchen.entity.Menu" select="com.cping.ricekitchen.mapper.MenuMapper.getMenuById"/>
    </resultMap>
</mapper>
